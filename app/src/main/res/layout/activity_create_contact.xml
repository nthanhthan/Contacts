<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Create_Contact"
   >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
    <ImageView
        android:id="@+id/imv_avt"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_baseline_person_24"></ImageView>
            <ImageButton
                android:id="@+id/btn_image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="140dp"
                android:layout_marginLeft="50dp"
                android:src="@drawable/camera"></ImageButton>
        </LinearLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:columnCount="2"
            android:rowCount="8">

            <ImageView
                android:layout_row="0"
                android:layout_column="0"
                android:layout_marginRight="20dp"
                android:src="@drawable/ic_baseline_phone_android_24"></ImageView>

            <TextView
                android:id="@+id/tv_save"
                android:layout_row="0"
                android:layout_column="1"
                android:text="Saving to Device"></TextView>

            <ImageView
                android:layout_row="1"
                android:layout_column="0"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/ic_baseline_person_24"></ImageView>

            <EditText
                android:id="@+id/edt_firstName"
                android:layout_width="300dp"
                android:layout_row="1"
                android:layout_column="1"
                android:hint="First name"
                android:minHeight="48dp"
                android:textSize="15dp"></EditText>

            <EditText
                android:id="@+id/edt_lastName"
                android:layout_width="300dp"
                android:layout_row="2"
                android:layout_column="1"
                android:hint="Last name"
                android:minHeight="48dp"
                android:textSize="15dp"></EditText>

            <ImageView
                android:layout_row="3"
                android:layout_column="0"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/ic_baseline_phone_24"></ImageView>

            <EditText
                android:id="@+id/edt_foneNumber"
                android:layout_width="300dp"
                android:layout_row="3"
                android:layout_column="1"
                android:hint="Phone"
                android:minHeight="48dp"
                android:inputType="number"
                android:textSize="15dp"></EditText>

            <EditText
                android:layout_width="150dp"
                android:layout_row="4"
                android:layout_column="1"
                android:hint="Mobile"
                android:minHeight="48dp"
                android:textSize="15dp"></EditText>

            <ImageView
                android:layout_row="5"
                android:layout_column="0"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/ic_baseline_email_24"></ImageView>

            <EditText
                android:id="@+id/edt_email"
                android:layout_width="300dp"
                android:layout_row="5"
                android:layout_column="1"
                android:hint="Email"
                android:minHeight="48dp"
                android:textSize="15dp"></EditText>

            <EditText
                android:layout_width="150dp"
                android:layout_row="6"
                android:layout_column="1"
                android:hint="Home"
                android:minHeight="48dp"
                android:textSize="15dp"></EditText>

            <TextView
                android:layout_row="7"
                android:layout_column="1"
                android:layout_marginTop="20dp"
                android:text="More fields"
                android:textColor="@color/design_default_color_primary"></TextView>
        </GridLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>